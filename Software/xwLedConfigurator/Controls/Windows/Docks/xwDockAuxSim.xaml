<UserControl x:Class="xwLedConfigurator.xwDockAuxSim"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xwLedConfigurator"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="500">

    <Border Background="{StaticResource AppMainColor}" CornerRadius="0,10,0,0" Margin="0">
        <StackPanel Orientation="Horizontal" Height="35">
            <TextBlock  Foreground="{StaticResource MainFontColor}" FontSize="16" VerticalAlignment="Center" Margin="10">AUX Simulation</TextBlock>
            <local:brightnesSlider x:Name="auxslider" Width="250" VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
