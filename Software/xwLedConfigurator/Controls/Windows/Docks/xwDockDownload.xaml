<UserControl x:Class="xwLedConfigurator.xwDockDownload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xwLedConfigurator"
             mc:Ignorable="d"
             d:DesignHeight="60
             " d:DesignWidth="420">

    <Border Background="{StaticResource AppMainColor}">
        <Grid Margin="10">
            <ProgressBar x:Name="progress"  Minimum="0" Maximum="100" Value="75" Height="25" Width="400" Foreground="{StaticResource AppTitleColor}" Background="{StaticResource MenuHoverColor}" BorderBrush="{StaticResource MenuHoverColor}" Visibility="Collapsed"/>
            <TextBlock x:Name="progressText" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource MainFontColor}" Visibility="Collapsed">Downloading 50%</TextBlock>
            <TextBlock x:Name="message" FontSize="20" Foreground="{StaticResource MainFontColor}" VerticalAlignment="Center" HorizontalAlignment="Right">Message</TextBlock>
        </Grid>
    </Border>
</UserControl>
