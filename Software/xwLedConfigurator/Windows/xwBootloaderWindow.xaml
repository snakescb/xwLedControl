<UserControl x:Class="xwLedConfigurator.xwBootloaderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xwLedConfigurator"
             mc:Ignorable="d" FontSize="16"
             d:DesignHeight="600" d:DesignWidth="1000  " IsVisibleChanged="UserControl_IsVisibleChanged">

    <Border Background="{StaticResource MenuInactiveColor}" CornerRadius="0" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Buttons -->
            <GroupBox  Grid.Row="0" Margin="10,10,10,0"  Padding="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="ExclamationCircle" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Actions</TextBlock>
                    </StackPanel>
                </GroupBox.Header>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="bSearch" Height="50" VerticalAlignment="Top" Click="searchLoader" Margin="15,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock  Icon="Search" FontSize="24"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,0" />
                            <TextBlock VerticalAlignment="Center" Margin="10,0,10,0">Connect</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </GroupBox>

            <!-- Device Information -->
            <GroupBox  Grid.Row="1" Margin="10,10,10,0"  Padding="10" IsEnabled="False">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="Microchip" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Device Information</TextBlock>
                    </StackPanel>
                </GroupBox.Header>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="0,0,5,0">
                        Serial Number<LineBreak/>
                        Flash size<LineBreak/>
                        Bootloader
                    </TextBlock>
                    <TextBlock Grid.Column="1" Margin="0,0,8,0">
                        :<LineBreak/>
                        :<LineBreak/>
                        :
                    </TextBlock>
                    <TextBlock x:Name="deviceInfo" Grid.Column="2">
                        -<LineBreak/>
                        -<LineBreak/>
                        -
                    </TextBlock>
                </Grid>
            </GroupBox>

            <!-- Settings -->
            <GroupBox Grid.Row="2" Margin="10,10,10,0" Padding="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="Cogs" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Settings</TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton x:Name="firmwareShipped" Grid.Column="0" Grid.Row="0" Margin="5" Click="firmwareShipped_Click"/>
                    <RadioButton x:Name="firmwareManual" Grid.Column="0" Grid.Row="1" Margin="5" Click="firmwareManual_Click"/>
                    <CheckBox x:Name="massErase" Grid.Column="0" Grid.Row="2" Margin="5"/>
                    <TextBlock Grid.Column="1" Grid.Row="0">Flash Firmware shipped with Software</TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="1">Select Firmware from File</TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="3">Remove Device Configuration</TextBlock>
                    <Button x:Name="bSelectFile"  Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Height="50" VerticalAlignment="Center" Margin="25,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="FileCode" FontSize="24"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,0" />
                            <TextBlock VerticalAlignment="Center" Margin="10,0,10,0">Select Firmware</TextBlock>
                        </StackPanel>
                    </Button>

                    <TextBlock Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Center" Margin="25,0,5,0">
                        Firmware File Name<LineBreak/>
                        Firmware Code Size<LineBreak/>
                        Firmware Flash Pages
                    </TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Center" Margin="0,0,8,0">
                        :<LineBreak/>
                        :<LineBreak/>
                        :
                    </TextBlock>
                    <TextBlock x:Name="fileInfo" Grid.Column="5" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Center" Margin="0,0,8,0">
                        -<LineBreak/>
                        -<LineBreak/>
                        -
                    </TextBlock>
                </Grid>
            </GroupBox>


            <!-- Message -->
            <GroupBox  Grid.Row="3" Margin="10,10,10,0"  Padding="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="EnvelopeOpenText" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Messages</TextBlock>
                    </StackPanel>
                </GroupBox.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <fa:IconBlock x:Name="loaderIcon" Grid.Column="0" FontSize="40" Icon="Search"  Margin="5,0,5,0"/>
                    <TextBlock x:Name="loaderMessage" Grid.Column="1" FontSize="24" VerticalAlignment="Center">Connect device and search bootloader</TextBlock>

                </Grid>
            </GroupBox>

        </Grid>
    </Border>
</UserControl>
