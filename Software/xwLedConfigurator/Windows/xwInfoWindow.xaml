<UserControl x:Class="xwLedConfigurator.xwInfoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xwLedConfigurator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{StaticResource MenuInactiveColor}" CornerRadius="0" Margin="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Device information-->
            <GroupBox Grid.Column="0" Grid.Row="0" Margin="10" Padding="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="Microchip" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Device Information</TextBlock>
                    </StackPanel>
                </GroupBox.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">Port Selection</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="1" Text=":"/>
                    <ComboBox x:Name="comPortMode" Grid.Column="3" Grid.Row="1" SelectionChanged="comPortMode_SelectionChanged">
                        <ComboBoxItem>Automatic</ComboBoxItem>
                        <ComboBoxItem>Manual</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Grid.Column="1" Grid.Row="3" Margin="0,0,10,0" VerticalAlignment="Center">Current Port</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="3" Text=":"/>
                    <ComboBox x:Name="comPortCurrent" Grid.Column="3" Grid.Row="3" SelectionChanged="comPortCurrent_SelectionChanged" IsEnabled="False">
                        <ComboBoxItem>COM1</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Grid.Column="1" Grid.Row="5" Margin="0,0,5,0">Connection State</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="5" Text=":"/>
                    <TextBlock x:Name="textConnection" Grid.Column="3" Grid.Row="5">Connected</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="7" Margin="0,0,5,0">Device Type</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="7" Text=":"/>
                    <TextBlock x:Name="textDeviceName" Grid.Column="3" Grid.Row="7">-</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="9" Margin="0,0,5,0">Storage</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="9" Text=":"/>
                    <TextBlock x:Name="textStorage" Grid.Column="3" Grid.Row="9">-</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="11" Margin="0,0,5,0">Firmware Version</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="11" Text=":"/>
                    <TextBlock x:Name="textFirmwareVersion" Grid.Column="3" Grid.Row="11">-</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="13" Margin="0,0,5,0">SerialNumber</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="13" Text=":"/>
                    <TextBlock x:Name="textSerialNumber" Grid.Column="3" Grid.Row="13">-</TextBlock>

                </Grid>
                
            </GroupBox>

            <!-- Software information-->
            <GroupBox Grid.Column="1" Grid.Row="0" Margin="10" Padding="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="Microsoft" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Software Information</TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="0,0,4,0">
                        Software Version<LineBreak/>
                        Software Buildtime<LineBreak/>
                        Git Branch<LineBreak/>
                        Git Tags<LineBreak/>
                        Git Committer<LineBreak/>
                        Git Message
                    </TextBlock>

                    <TextBlock Grid.Column="1" Margin="0,0,8,0">
                        :<LineBreak/>
                        :<LineBreak/>
                        :<LineBreak/>
                        :<LineBreak/>
                        :<LineBreak/>
                        :
                    </TextBlock>

                    <TextBlock x:Name="versionInfoText" Grid.Column="2"/>

                </Grid>
            </GroupBox>

            <!-- Debug Output-->
            <GroupBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,10" Padding="2">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock FontSize="20" Icon="Bug" Margin="5,0,5,0"/>
                        <TextBlock FontSize="18" Margin="0,0,5,0">Device Debug Output</TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Background="White" Opacity="0.05" Margin="0,0,10,0" VerticalScrollBarVisibility="Visible"/>
                    <Button Grid.Column="1" Height="50" VerticalAlignment="Top" Click="Button_Click">
                        <fa:IconBlock Grid.Column="0" Name="MenuIcon" Icon="Trash" FontSize="24"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Button>
                </Grid>
                
            </GroupBox>

        </Grid>
    </Border>
</UserControl>
