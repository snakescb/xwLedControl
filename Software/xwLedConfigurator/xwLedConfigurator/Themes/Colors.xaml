<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Main Application Colors -->
    <SolidColorBrush x:Key="AppMainColor" Color="#FF313131"/>
    <SolidColorBrush x:Key="AppBorderColor" Color="#FFBBBBBB"/>
    <SolidColorBrush x:Key="AppTitleColor" Color="#FF6C1498"/>
    
    <SolidColorBrush x:Key="MenuInactiveColor" Color="White" Opacity="0.05"/>
    <SolidColorBrush x:Key="MenuActiveColor" Color="#FF6C1498"/>
    <SolidColorBrush x:Key="MenuHoverColor"  Color="White" Opacity="0.2"/>
    
    <SolidColorBrush x:Key="MainFontColor" Color="#FFEFEFEF"/>
    <SolidColorBrush x:Key="2ndFontColor" Color="#FFBBBBBB"/>
    
</ResourceDictionary>